-- Fling e sentar
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local humanoid = char:WaitForChild("Humanoid")
local root = char:WaitForChild("HumanoidRootPart")

task.wait(0.1) -- Pequeno delay para evitar falhas

-- Fling extremamente forte na direção que o jogador está olhando
local direction = root.CFrame.LookVector * 250  -- Aumentei a força para 250
root.Velocity = direction
root.AssemblyLinearVelocity = direction  -- Garante que o fling funcione bem

task.wait(0.2) -- Espera um pouco antes de sentar
humanoid.Sit = true
